# ==============================================================================
# LiveKit Agent Environment Configuration
# ==============================================================================
# Copy this file to .env and fill in your API keys
# All keys are optional - only set the ones you need for your chosen providers
# ==============================================================================

# ==============================================================================
# USER SETTINGS
# ==============================================================================
USER_NAME=User

# ==============================================================================
# PROVIDER SELECTION
# ==============================================================================
# Choose your providers here (lowercase)
# See providers/provider_types.py for all supported options

# LLM Provider: openai, groq, gemini, anthropic, azure_openai, aws_bedrock,
#              together, mistral, perplexity, ollama, vllm, deepseek, qwen
LLM_PROVIDER=groq
LLM_MODEL=llama-3.1-8b-instant
LLM_TEMPERATURE=0.7

# STT Provider: groq, openai, deepgram, assemblyai, google, azure, aws_transcribe, vosk, whisper_cpp
STT_PROVIDER=deepgram
STT_MODEL=nova-2
STT_LANGUAGE=en

# TTS Provider: edge_tts (FREE!), groq, elevenlabs, cartesia, deepgram, openai, azure, google, aws_polly, coqui, piper
# RECOMMENDED: edge_tts - FREE Microsoft Edge TTS, no API key needed!
TTS_PROVIDER=edge_tts
TTS_MODEL=
TTS_VOICE=en-US-JennyNeural
# Other Edge-TTS voices: en-US-GuyNeural, en-US-AriaNeural, en-GB-SoniaNeural, en-IN-NeerjaNeural

# ==============================================================================
# LLM API KEYS
# ==============================================================================

# OpenAI (GPT-4, GPT-4o)
OPENAI_API_KEY=

# Groq (Llama 3, Gemma, Mixtral) - Fast inference
GROQ_API_KEY=

# Google Gemini
GEMINI_API_KEY=

# Anthropic (Claude)
ANTHROPIC_API_KEY=

# Azure OpenAI
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_DEPLOYMENT=
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# AWS (Bedrock, Transcribe, Polly)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# Together.ai
TOGETHER_API_KEY=
TOGETHER_BASE_URL=https://api.together.xyz/v1

# Mistral AI
MISTRAL_API_KEY=
MISTRAL_BASE_URL=https://api.mistral.ai/v1

# Perplexity AI
PERPLEXITY_API_KEY=
PERPLEXITY_BASE_URL=https://api.perplexity.ai

# DeepSeek
DEEPSEEK_API_KEY=
DEEPSEEK_BASE_URL=https://api.deepseek.com

# Qwen (Alibaba Cloud)
QWEN_API_KEY=
QWEN_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1

# Ollama (Local)
OLLAMA_BASE_URL=http://localhost:11434/v1

# vLLM (Local Server)
VLLM_BASE_URL=http://localhost:8000/v1

# ==============================================================================
# STT API KEYS
# ==============================================================================

# Deepgram
DEEPGRAM_API_KEY=

# AssemblyAI
ASSEMBLYAI_API_KEY=

# Google Cloud (for STT/TTS)
# Set this to the path of your service account JSON file
GOOGLE_APPLICATION_CREDENTIALS=

# Azure Speech Services
AZURE_SPEECH_KEY=
AZURE_SPEECH_REGION=eastus

# Vosk (Offline) - Path to downloaded model
VOSK_MODEL_PATH=

# Whisper.cpp (Offline) - Path to GGML model file
WHISPER_CPP_MODEL_PATH=

# ==============================================================================
# TTS API KEYS
# ==============================================================================

# ElevenLabs
ELEVENLABS_API_KEY=

# Cartesia
CARTESIA_API_KEY=

# Amazon Polly (uses AWS credentials above)
POLLY_REGION=us-east-1

# Coqui TTS (Offline)
COQUI_MODEL=tts_models/en/ljspeech/tacotron2-DDC

# Piper TTS (Offline) - Path to downloaded model
PIPER_MODEL_PATH=

# ==============================================================================
# MEMORY & TOOLS
# ==============================================================================

# Mem0 AI Memory
MEM0_API_KEY=

# MCP Server (N8N)
N8N_MCP_SERVER_URL=

# ==============================================================================
# LIVEKIT SETTINGS
# ==============================================================================

LIVEKIT_URL=ws://localhost:7880
LIVEKIT_API_KEY=
LIVEKIT_API_SECRET=

# ==============================================================================
# TOOL TIMEOUTS
# ==============================================================================

WEATHER_TIMEOUT=5
EMAIL_TIMEOUT=10
